<?xml version="1.0" encoding="utf-8"?><!-- (사업주만) 전체 시급 공제 설정 -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/noticeboard_background"
    android:paddingTop="5dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:text="전체 시급 공제 설정"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"

            />
        <!-- 시급 입력 및 공제 설정 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/round_view"
                android:backgroundTint="@color/light_pastel_blue"
                android:gravity="center"
                android:text="시급 입력"
                android:textAlignment="center"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etHourlyRateWhole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:hint="시급을 입력하세요"
                android:inputType="numberDecimal" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/round_view"
            android:backgroundTint="@color/light_pastel_blue"
            android:gravity="center"
            android:text="공제 비율 (%)"
            android:textAlignment="center"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/etDeductionsWhole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="공제 비율을 입력하세요"
            android:inputType="numberDecimal" />
    </LinearLayout>

        <CheckBox
            android:id="@+id/cbRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="세부설정" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="국민연금 (%)"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etRate1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="공제 비율을 입력하세요"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="건강보험 (%)"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etRate2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="공제 비율을 입력하세요"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="고용보험 (%)"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etRate3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="공제 비율을 입력하세요"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="산재보험 (%)"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etRate4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="공제 비율을 입력하세요"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장기요양보험 (%)"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etRate5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="공제 비율을 입력하세요"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소득세 (%)"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etRate6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="공제 비율을 입력하세요"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기타 (%)"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etRate7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="공제 비율을 입력하세요"
            android:inputType="numberDecimal" />

        <android.widget.Button
            android:id="@+id/btnSetSalaryWhole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:background="@drawable/round_view"
            android:gravity="center"
            android:text="설정"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>