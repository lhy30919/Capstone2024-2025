<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 출근부 버튼 -->
    <android.widget.Button
        android:id="@+id/btnAttendanceCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="출근부"
        android:textSize="18sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 오늘 날짜 -->
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘 날짜"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/btnAttendanceCheck"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 출근시간 -->
    <TextView
        android:id="@+id/tvClockIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="출근 시간: 미등록"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tvDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 퇴근시간 -->
    <TextView
        android:id="@+id/tvClockOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="퇴근 시간: 미등록"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tvClockIn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 출근/퇴근 버튼 -->
    <android.widget.Button
        android:id="@+id/btnClockInOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="출근"
        android:textSize="18sp"
        android:backgroundTint="#4CAF50"
        app:layout_constraintTop_toBottomOf="@id/tvClockOut"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
